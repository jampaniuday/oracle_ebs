function srcenv
{
if [ "X${COMMON_TOP}" != "X" ] ; then
  echo "Already sourced";
  return 0;
fi
export _FS1ENV="<%= node[:ebs][:app][:runenv] %>"
export _EBSAPP="<%= node[:ebs][:vg][:app_fs_nam] %>/EBSapps.env"
if  [ -f "${_EBSAPP}" ] ; then
  echo ". ${_EBSAPP} run"
. ${_EBSAPP} run
  return 0
fi
if  [ -f "${_FS1ENV}" ] ; then
  echo ". ${_FS1ENV}"
. ${_FS1ENV}
  return 0
fi
}
