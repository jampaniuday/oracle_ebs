while  ( <LFILE> ) {
  $actual{$1}++ if ( /(10.1.2 Tools patched successfully)/ ) ;
  $actual{$1}++ if ( /(AutoConfig completed successfully)/ ) ;
  $actual{$1}++ if ( /(Created the domain successfully)/ ) ;
  $actual{$1}++ if ( /(EBS Registered successfully)/ ) ;
