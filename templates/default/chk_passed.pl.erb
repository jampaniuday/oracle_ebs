  $HNAME="<%= node[:hostname] %>";
$APPBASE="<%= node[:ebs][:vg][:app_fs_nam] %>";
 $ORASID="<%= node[:ebs][:db][:sid] %>";

$LOGD="${APPBASE}/fs1/inst/apps/${ORASID}_${HNAME}/logs";
